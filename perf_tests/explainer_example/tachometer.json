{
  "$schema": "https://raw.githubusercontent.com/Polymer/tachometer/master/config.schema.json",
  "root": ".",
  "sampleSize": 50,
  "timeout": 2,
  "benchmarks": [
    {
      "name": "Declarative",
      "url": "test_declarative.html",
      "measurement": "global",
      "browser": {
        "name": "chrome",
        "binary": "/usr/bin/google-chrome-unstable",
        "addArguments": ["--enable-blink-features=DeclarativeShadowDOM"],
        "headless": false,
        "windowSize": {"width": 1024,"height": 1024}
      }
    },
    {
      "name": "Inline Script",
      "url": "test_script.html",
      "measurement": "global",
      "browser": {
        "name": "chrome",
        "binary": "/usr/bin/google-chrome-unstable",
        "addArguments": ["--enable-blink-features=DeclarativeShadowDOM"],
        "headless": false,
        "windowSize": {"width": 1024,"height": 1024}
      }
    },
    {
      "name": "Single Loop Script",
      "url": "test_script_2.html",
      "measurement": "global",
      "browser": {
        "name": "chrome",
        "binary": "/usr/bin/google-chrome-unstable",
        "addArguments": ["--enable-blink-features=DeclarativeShadowDOM"],
        "headless": false,
        "windowSize": {"width": 1024,"height": 1024}
      }
    }
  ]
}
